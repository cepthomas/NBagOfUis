<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0-windows</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
    <Version>$([System.DateTime]::UtcNow.ToString(yy.MM.dd))</Version> 
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Description>NBagOfTricks UI components</Description>
    <Copyright>MIT License</Copyright>
    <RootNamespace>NBagOfUis</RootNamespace>
    <AssemblyName>NBagOfUis</AssemblyName>
    <OutputPath>bin\</OutputPath>
    <!-- <DefineConstants>DEBUG;TRACE</DefineConstants> -->
    <WarningLevel>4</WarningLevel>
    <NoWarn>CS1591,CA1837,IDE0063,IDE0090,CA1822</NoWarn>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SatelliteResourceLanguages>none</SatelliteResourceLanguages> <!-- en none -->
    <!-- nuget properties -->
    <PackageId>NBagOfUis</PackageId>
    <Authors>Joe Bob</Authors>
    <Company>Ephemera</Company>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Test\**" />
    <EmbeddedResource Remove="Test\**" />
    <None Remove="Test\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="NBagOfTricks">
      <HintPath>lib\NBagOfTricks.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="BarBar.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="ClickGrid.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="CpuMeter.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="FilTree.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Meter.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="OptionsEditor.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Pan.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Pot.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="PropertyGridEx.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="Slider.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="TextViewer.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="TimeBar.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="VirtualKeyboard.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="WaveViewer.cs">
      <SubType>UserControl</SubType>
    </Compile>
  </ItemGroup>

</Project>
